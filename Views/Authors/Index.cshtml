@{
    ViewBag.Title = "Авторы";
}

<br />

<div class="authors-page">

    <div class="page-header">
        <input type="text" value="" id="searchInput" />
        <button id="getBtn">Поиск</button>
        <button class="btn-add" id="addBtn">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M8 1V15M1 8H15" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
            </svg>
            Добавить автора
        </button>
    </div>

    <div class="table-container">
        <table class="authors-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Автор</th>
                    <th style="min-width: 120px;">Возраст</th>
                    <th>Предыдущие навыки</th>
                    <th>Полученные навыки</th>
                    <th>Отзыв</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                <!-- Данные будут загружены через JS -->
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script src="~/js/authors/index.js"></script>
}

@section Styles {
    <link href="~/css/authors/index.css" rel="stylesheet" />
}